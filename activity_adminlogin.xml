<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    tools:context=".Adminlogin">

    <ImageView
        android:layout_width="138dp"
        android:layout_height="122dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/admin_icon"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="174dp" />

    <EditText
        android:id="@+id/editTextAdminUsername"
        android:layout_width="340dp"
        android:layout_height="58dp"
        android:hint="Username"
        android:inputType="text"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="317dp" />

    <EditText
        android:id="@+id/editTextAdminPassword"
        android:layout_width="341dp"
        android:layout_height="46dp"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="395dp" />

    <EditText
        android:id="@+id/editTextAdminConfirmPassword"
        android:layout_width="346dp"
        android:layout_height="45dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="461dp" />

    <Button
        android:id="@+id/buttonAdminRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Register"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="531dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="182dp"
        android:layout_height="89dp"
        android:text="Admin Registration"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="60dp" />

</androidx.constraintlayout.widget.ConstraintLayout>